<h1>タスク一覧</h1>

<table>
  <thead>
    <tr>
      <th>タスク名</th>
      <th>説明</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
    <tr>
      <td><%= link_to task.title, task %></td>
      <td><%= task.description %></td>
      <td><%= link_to '編集する', edit_task_path(task) %></td>
      <td><%= link_to '削除する', task, 
        data: {turbo_method:'delete', turbo_confirm:'本当に削除しますか?'} %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Task新規作成', new_task_path %>
